<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>
<fx:root type="javafx.scene.layout.HBox" xmlns:fx="javafx.com/fxml">
    <children>
        <VBox spacing="8">
            <children>
                <TableView fx:id="listOfCacheSites" minWidth="300" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="image" prefWidth="150" text="Image"></TableColumn>
                        <TableColumn fx:id="cacheName" prefWidth="150" text="Name"/>
                    </columns>
                </TableView>
                <TextField promptText="Cache Area Name" fx:id="cachedSiteName"/>
                <Button fx:id="saveButton" text="Save"/>
            </children>
        </VBox>
        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <children>
                <WebView fx:id="browser" VBox.vgrow="ALWAYS"/>
            </children>
        </VBox>
    </children>
</fx:root>

